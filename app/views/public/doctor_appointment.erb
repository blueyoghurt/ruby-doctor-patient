<h1>Doctor Availability</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Speciality</th>
      <th>Contact</th>
      <th>Appointments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.speciality %></td>
        <td><%= doctor.contact %></td>
        <td><%= doctor.appointments[0].inspect %><td>
      </tr>
    <% end %>
  </tbody>

</table>

<h1>New Appointment</h1>

<%= form_for @appointment do |f| %>
  <p>
    <%= f.label :speciality %><br/>
        <%= f.select :doctor_id, Doctor.all.collect {|x| [x.speciality,x.id]} , {} %>
  </p>


  <p>
    <%= f.label :name %><br/>
    <%= f.select :doctor_id, Doctor.all.collect {|x| [x.name,x.id]} , {} %>
  </p>

  <p>
  <%= f.label :date %><br>
  <%= f.date_select :date %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back', appointments_path %>
